@model IEnumerable<EMS.Models.Presenter>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center flex-wrap gap-4">
    <h1>Presenters List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Presenter</a>
</p>
</div>

           <div class="d-flex justify-content-evenly align-content-center">
@foreach (var item in Model) {
            <div  class="card" style="width: 18rem;">
                <div class="card-body">
                    <h2 class="card-title text-center text-success"> Presenter</h2>
                    <img src="~/images/Presenter.jpg" class="img-fluid" >
                    <a asp-action="Details" asp-route-id="@item.Id" class="card-title text-decoration-none text-primary d-block"> @Html.DisplayFor(modelItem => item.Name)</a>
                    <div class="d-flex justify-content-between">

                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    </div>

                </div>
            </div>
}
        </div




