@model WebApplication1.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <select id="topicSelect" onchange="HandelTopicChange(event)" class="form-control" asp-for="Topic" asp-items="ViewBag.Topic"></select>
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PresenterId" class="control-label"></label>
                    <select id="presenterSelect2" class="form-control" data-val="true" data-val-required="The PresenterId field is required." name="PresenterId">
                    @foreach (var opt in ViewBag.PresenterId)
                    {
                        <option value="@opt">@opt</option>
                    }
                    </select>
            </div>
            <div class="form-group">
                <label asp-for="PresenterId" class="control-label"></label>
                <select id="presenterSelect" class="form-control" asp-for="PresenterId" asp-items="ViewBag.PresenterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InvestorId" class="control-label"></label>
                <select asp-for="InvestorId" class="form-control" asp-items="ViewBag.InvestorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ConferenceRoomId" class="control-label"></label>
                <select asp-for="ConferenceRoomId" class="form-control" asp-items="ViewBag.ConferenceRoomId"></select>
            </div>

            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

